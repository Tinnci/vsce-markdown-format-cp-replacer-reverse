{
	"name": "vsce-markdown-format-cp-replacer-reverse",
	"publisher": "Soratsu",
	"displayName": "vsce-markdown-format-cp-replacer-reverse",
	"description": "replace some English punctuation with Chinese punctuation",
	"version": "0.0.4",
	"icon": "logo.png",
	"engines": {
		"vscode": "^1.96.0"
	},
	"repository": {
		"url": "https://github.com/Tinnci/vsce-markdown-format-cp-replacer-reverse.git"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:markdown"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "soratsu.replace.all",
				"title": "Markdown CP Replacer: Replace in Full Document"
			},
			{
				"command": "soratsu.replace.selection",
				"title": "Markdown CP Replacer: Replace in Selection"
			}
		],
		"keybindings": [
			{
				"command": "soratsu.replace.all",
				"key": "alt+f",
				"when": "editorTextFocus"
			},
			{
				"command": "soratsu.replace.selection",
				"key": "alt+s",
				"when": "editorTextFocus && editorHasSelection"
			}
		],
		"configuration": {
            "title": "Markdown CP Replacer",
            "properties": {
                "markdown-cp-replacer.rules": {
                    "type": "array",
                    "default": [
                        { "from": ",", "to": "，" },
                        { "from": ":", "to": "：" },
                        { "from": "?", "to": "？" },
                        { "from": "!", "to": "！" },
                        { "from": ".", "to": "。" },
                        { "from": "(", "to": "（" },
                        { "from": ")", "to": "）" }
                    ],
                    "description": "自定义中英文标点替换规则。"
                },
                "markdown-cp-replacer.handleQuotes": {
                    "type": "boolean",
                    "default": true,
                    "description": "是否将英文双引号 `\"` 替换为中文引号 `“` 和 `”`。"
                }
            }
        }
	},
	"scripts": {
		"vscode:prepublish": "pnpm run package",
		"compile": "pnpm webpack",
		"watch": "pnpm webpack --watch",
		"package": "pnpm webpack --mode production --devtool hidden-source-map",
		"test-compile": "pnpm tsc -p ./",
		"test-watch": "pnpm tsc -watch -p ./",
		"pretest": "pnpm run test-compile && pnpm run lint",
		"lint": "pnpm eslint src --ext ts",
		"test": "pnpm vscode-test"
	},
	"devDependencies": {
		"@stylistic/eslint-plugin": "^4.4.0",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.15.24",
		"@types/vscode": "^1.96.0",
		"@typescript-eslint/eslint-plugin": "^8.33.0",
		"@typescript-eslint/parser": "^8.33.0",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"eslint": "^9.27.0",
		"glob": "^11.0.2",
		"mocha": "^11.5.0",
		"ts-loader": "^9.5.2",
		"typescript": "^5.8.3",
		"webpack": "^5.99.9",
		"webpack-cli": "^6.0.1"
	},
	"license": "MIT",
	"packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
